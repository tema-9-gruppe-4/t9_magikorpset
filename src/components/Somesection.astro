---
import "../styles/general.css";
---

<section>
  <div class="bird"></div>
  <div class="some">
    <img src="/img/hurtigemed.png" alt="3hurtigemed" />
    <img src="/img/event.png" alt="events" />
    <img src="/img/madeline.png" alt="Madeline" />
  </div>
  <div class="icons">
    <a href="https://www.facebook.com/KidsAidDanmark" target="_blank">
      <img src="../../public/img/facebook.png" alt="Facebook" />
    </a>
    <a href="https://www.instagram.com/kidsaiddk/" target="_blank">
      <img src="../../public/img/social.png" alt="Instagram" />
    </a>
    <a
      href="https://www.linkedin.com/company/kidsaiddanmark/posts/?feedView=all"
      target="_blank"
    >
      <img src="/img/linkedin.png" alt="Linkedin" />
    </a>
    <a href="" target="_blank">
      <img src="/img/email.png" alt="Mail" />
    </a>
  </div>
</section>

<style>
  .some {
    margin-top: 5em;
    display: flex;
    justify-content: space-between;
    gap: 20px;
    margin-bottom: 5em;
  }

  .some img {
    width: 30%;
    height: 30%;
    border-radius: 12px;
    object-fit: cover;
    border: 1px solid #581082;
  }
  .icons {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-top: 20px;
  }

  .icons a {
    display: inline-block;
    width: 40px;
    height: 40px;
  }

  .icons img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .some img {
    transition: transform 0.3s ease;
  }

  .some img:hover {
    transform: scale(1.1);
  }
  .icons img {
    transition: transform 0.3s ease;
  }

  .icons img:hover {
    transform: scale(1.1);
  }
</style>
